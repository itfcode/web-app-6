@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Style="background-color:#01579B;">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />

        <MudTooltip Text="Открыть MudBlazor" Arrow="true" Placement="Placement.Left" Duration="50">
            <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit"
                           Link="https://mudblazor.com/" Target="_blank" />
        </MudTooltip>

        <MudTooltip Text="Открыть проект на GitHub" Arrow="true" Placement="Placement.Bottom">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit"
                           Link="https://github.com/itfcode/web-app" Target="_blank" />
        </MudTooltip>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6" Style="color:#4A148C;">
                Project: WebApp
            </MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}