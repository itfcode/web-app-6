@if (LoadFailed)
{
    @*<ErrorInfo Error="@Error" />*@
    <MudAlert Severity="Severity.Error" Variant="Variant.Outlined">
        @(Error.Message)
    </MudAlert>
}
else if (Loading)
{
    <MudContainer Style="text-align:center;min-height:300px;margin-top:100px;">
        <MudProgressCircular Color="Color.Primary"
                         Style="height:140px;width:140px;"
                         Indeterminate="true" />
    </MudContainer>
}
else
{
    @InternalContent
}

@code {

    #region Properties

    [Parameter]
    public bool Loading { get; set; }

    [Parameter]
    public bool LoadFailed { get; set; }

    [Parameter]
    public RenderFragment InternalContent { get; set; }

    [Parameter]
    public Exception Error { get; set; }

    #endregion
}
